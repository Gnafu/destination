<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">
<beans>

    <bean id="routePlanner" class="it.geosolutions.process.gs.RoutePlannerGH">
      <constructor-arg index="0" ref="catalog"/>
      <constructor-arg index="1" ref="dataDirectory"/>
    </bean>

    <bean id="riskCalculator" class="it.geosolutions.process.gs.RiskCalculator">
      <constructor-arg index="0" ref="catalog"/>
    </bean>
    
    <bean id="riskCalculatorSimple" class="it.geosolutions.process.gs.RiskCalculatorSimple">
      <constructor-arg index="0" ref="catalog"/>
      <constructor-arg index="1" ref="dataDirectory"/>
    </bean>
    
    <bean id="downloader" class="it.geosolutions.process.gs.DestinationDownload">
      <constructor-arg index="0" ref="catalog"/>
      <constructor-arg index="1" ref="dataDirectory"/>
    </bean>	
    
    <bean id="removeDownload" class="it.geosolutions.process.gs.DestinationRemoveDownload">
        <constructor-arg index="0" ref="dataDirectory"/>      
    </bean>	

	<bean id="processingRepository" class="it.geosolutions.process.gs.ProcessingRepository">
      <constructor-arg index="0" ref="catalog"/>
    </bean>

    <!--  Execution manager, the thing that actually orchestrates the process execution -->
    <bean id="algebricProcess" class="org.geoserver.wps.raster.algebra.AlgebricProcess">
        <constructor-arg ref="catalog" />
    </bean>
    
    <bean id="transformedRasterLayerIdentifier" class="it.geosolutions.wms.featureinfo.TransformedRasterLayerIdentifier">
      <constructor-arg ref="wms"/>
    </bean>
</beans>
